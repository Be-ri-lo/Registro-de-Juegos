<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @game.name %> 
  <%= link_to "rules", rails_blob_path(@game.rules, disposition: 'attachment') %>
</p>

<ul>
  <% @game.components.each do |component|  %>
    <li>
      <%= link_to image_tag(component), rails_blob_path(component, disposition: 'attachment') %>
    </li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_game_path(@game) %> |
<%= link_to 'Back', games_path %>
